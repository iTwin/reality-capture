{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDirs": ["src", "tests"],
    "types": ["mocha", "node"]
  },
  "include": [
    "src/**/*.ts", 
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}