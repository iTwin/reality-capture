{
  "name": "reality-capture-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Reality-capture unit tests",
  "scripts": {
    "build": "tsc 1>&2",
    "lint": "eslint ./src --ext .ts ",
    "lint-fix": "eslint ./src --fix --ext .ts",
    "test:unit": "mocha ./lib/**/*.test.js --slow 0",
    "coverage": "nyc --check-coverage --lines 90 --functions 90 --statements 90, npm run test:unit"
  },
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "dependencies": {
    "reality-capture" : "../reality_capture/lib/reality-capture-1.0.0-rc.1.tgz"
  },
  "devDependencies": {
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.8.0",
    "chai": "^6.0.0",
    "eslint": "^8.52.0",
    "mocha": "^11.0.0",
    "nyc": "^17.0.0",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/reality-capture"
  },
  "nyc": {
    "include": ["../reality_capture/lib/**/*.js"],
    "exclude": ["**/*.test.js"],
    "extension": [".js"],
    "reporter": ["text", "html"],
    "all": true
  }
}