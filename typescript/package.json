{
	"name": "reality-data-sample",
	"version": "1.0.0",
	"description": "Node sample application to show how reality iTwin APIs are working and display the productions from realitydata sample app.",
	"main": "lib/index.js",
	"scripts": {
		"build": "npm run clean && tsc",
		"clean": "rimraf lib build .rush",
		"lint": "eslint ./src --ext .ts,.tsx ",
		"lint-fix": "eslint ./src --fix --ext .ts,.tsx",
		"start:webapp": "npm-run-all --parallel start:frontend start:backend",
		"start:backend": "nodemon --inspect lib/backend/main.js",
		"start:frontend": "react-scripts start",
		"start:sample": "(npm run build) & node --experimental-json-modules ./lib/backend/reality-data-sample/index.js",
		"test:certa": "certa -r chrome",
		"test:integration:chrome": "npm run -s webpackTests && npm run -s test:certa",
		"test:integration": "npm-run-all --parallel test:integration:chrome start:backend",
		"webpackTests": "webpack --config ./webpack.config.js 1>&2"
	},
