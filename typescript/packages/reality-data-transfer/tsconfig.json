{
  "extends": "./node_modules/@itwin/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "types": [
    "@types/wicg-file-system-access"
  ],
  "include": [
    "./src/**/*.ts*",
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}