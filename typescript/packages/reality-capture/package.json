{
  "name": "@itwin/reality-capture",
  "version": "0.1.0",
  "description": "This package contains a SDK for Reality Modeling, Reality Analysis and Reality Conversion iTwin APIs as well as Reality Management API utils. It provides classes, functions and examples to upload local data to Reality Management, run jobs and download the results.",
  "main": "lib/cjs/index.node.js",
  "module": "lib/esm/index.web.js",
  "types": "lib/cjs/index.node.d.ts",
  "exports": {
    ".": {
      "browser": {
        "import": "./lib/esm/index.web.js",
        "types": "./lib/esm/index.web.d.ts",
        "default": "./lib/esm/index.web.js"
      },
      "node": {
        "import": "./lib/cjs/index.node.js",
        "types": "./lib/cjs/index.node.d.ts",
        "default": "./lib/cjs/index.node.js"
      },
      "default": {
        "import": "./lib/cjs/index.node.js",
        "types": "./lib/cjs/index.node.d.ts",
        "default": "./lib/cjs/index.node.js"
      }
    }
  },
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "tsc 1>&2 -p tsconfig.node.json",
    "build:esm": "tsc 1>&2 -p tsconfig.web.json",
    "clean": "rimraf lib",
    "lint": "eslint ./src --ext .ts ",
    "lint-fix": "eslint ./src --fix --ext .ts",
    "test:unit": "mocha --require ts-node/register ./src/tests/**/*.test.ts --slow 0",
    "coverage": "nyc npm run test:unit",
    "pack": "npm pack --pack-destination ./lib"
  },
  "keywords": [
    "typescript",
    "sdk",
    "reality-capture",
    "bentley",
    "azure"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "dependencies": {
    "@azure/storage-blob": "^12.15.0",
    "@itwin/reality-data-client": "workspace:*",
    "axios": "^1.6.0",
    "class-validator": "^0.14.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@itwin/build-tools": "^5.0.0",
    "@itwin/core-bentley": "^5.0.0",
    "@itwin/core-common": "^5.0.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.8.0",
    "@types/sinon": "^17.0.0",
    "chai": "^6.0.0",
    "eslint": "^8.52.0",
    "mocha": "^11.0.0",
    "nyc": "^17.0.0",
    "rimraf": "^4.4.1",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/reality-capture",
    "directory": "typescript/packages/reality-capture"
  },
  "nyc": {
    "statements": 90,
    "lines": 90,
    "functions": 90,
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "sourceMap": false,
    "instrument": true,
    "include": ["src/**/*.ts"],
    "exclude": ["src/index.node.ts", "src/index.web.ts", "src/tests/**/*.ts", "src/service/data_handler.ts"],
    "extension": [".ts"],
    "reporter": ["text", "html"]
  }
}