{
  "extends": "./node_modules/@itwin/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["dom", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}